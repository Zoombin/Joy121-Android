<?xml version="1.0" encoding="utf-8"?>
<!-- 绑定手机对话框 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/layout_dialog"    
    android:orientation="vertical"    
    android:layout_width="300dip"
    android:minWidth="300dip" 
    android:layout_height="match_parent"    
    android:paddingLeft="0dp" 
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="@drawable/dialog_background">
    
    <TextView 
        android:id="@+id/tv_title"    
        android:layout_width="match_parent"    
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="left"
        android:textColor="#999999" />   
  <LinearLayout
       android:orientation="horizontal"    
       android:layout_width="match_parent"     
       android:layout_height="wrap_content">                                         
      <EditText 
           android:id="@+id/et_bindMobile"
           android:layout_width="190dip"
           android:layout_height="38dip"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="0dp"
           
           android:background="@drawable/searchtext_background"
           android:textColor="#000000" />
         <Button
                android:id="@+id/btn_getcode"
                android:layout_width="100dip"
                android:layout_height="37dip" 
                android:text=""/>
      </LinearLayout>  
     <LinearLayout
        android:orientation="horizontal"    
        android:layout_width="match_parent"     
        android:layout_height="wrap_content">  
        <EditText 
            android:id="@+id/et_securitycode"
            android:layout_width="190dip"
            android:layout_height="38dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/searchtext_background"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout     
        android:orientation="horizontal"    
        android:layout_width="match_parent"     
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >    

	    <Button 
	        android:id="@+id/btn_no"    
	        android:layout_width="0dp"
	        android:layout_weight="1" 
	        android:layout_height="wrap_content"    
	        android:textColor="#4ba2f2"
	        android:gravity="center"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp" 
	        android:background="@drawable/dialog_button_left"
	        android:text="@string/cancel" />
	    
	    <Button 
	        android:id="@+id/btn_yes"    
	        android:layout_width="0dp"
	        android:layout_weight="1"   
	        android:layout_height="wrap_content"    
	        android:textColor="#4ba2f2"
	        android:gravity="center"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp" 
	        android:background="@drawable/dialog_button_right"
	        android:text="@string/confirm" />
	    
    </LinearLayout>   
     
</LinearLayout>    