<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

     <include 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/navigation_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_currpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ababab"
                android:scaleType="fitXY"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/et_currpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg"
                android:hint="@string/currpwd"
                android:singleLine="true"
                android:textColor="@color/BLACK" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_newpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff781f"
                android:scaleType="fitXY"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/et_newpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg"
                android:hint="@string/newpwd"
                android:singleLine="true"
                android:textColor="@color/BLACK" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_comfirmnewpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff781f"
                android:scaleType="fitXY"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/et_comfirmnewpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg"
                android:hint="@string/comfirmnewpwd"
                android:singleLine="true"
                android:textColor="@color/BLACK" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_changepwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/greenbutton"
        android:text="@string/changepwd"
        android:textColor="@color/WHITE" />

</LinearLayout>