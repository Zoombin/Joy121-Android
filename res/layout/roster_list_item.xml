<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_roster"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:background="@color/WHITE">
    
    	<TextView
            android:id="@+id/tv_roster_ranking"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/BLACK" />
    
    	<LinearLayout
    		android:layout_width="wrap_content"
    		android:layout_height="match_parent" 
    		android:layout_alignParentLeft="true"
    		android:layout_marginLeft="30dip"
    		android:orientation="vertical" >
    	
	    	<LinearLayout android:id="@+id/roster_info"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"  >

		        <TextView
		            android:id="@+id/tv_roster_personname"
		            android:layout_width="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:layout_height="wrap_content"
		            android:textColor="@color/BLACK" />
		        
		        <TextView
		            android:id="@+id/tv_roster_beforescore"
		            android:layout_width="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="20dip"
		            android:textSize="12sp"
		            android:text="@string/yourscore"
		            android:textColor="#808080"  />
		        
		        <TextView
		            android:id="@+id/tv_roster_score"
		            android:layout_width="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:layout_height="wrap_content"
		            android:textColor="@color/BLACK"  />
        
        	</LinearLayout>
        	
	    	<TextView
		        android:id="@+id/tv_roster_comdep"
		        android:layout_width="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_height="wrap_content"
		        android:textColor="#808080" />
	    </LinearLayout>
	    
    	<LinearLayout android:id="@+id/award_info"
	    		android:layout_width="60dip"
	    		android:layout_height="wrap_content"
	    		android:layout_alignParentRight="true" >
	    	
    	    <TextView
	            android:id="@+id/tv_roster_beforeaward"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="12sp"
	            android:text="@string/integral"
	            android:textColor="#808080" />
	    
	    	<TextView
	            android:id="@+id/tv_roster_award"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#FF0000" />

    	</LinearLayout>

</RelativeLayout>